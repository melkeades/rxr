:root
  font-family Inter, system-ui, Avenir, Helvetica, Arial, sans-serif
  line-height 1.5
  font-weight 400
  color-scheme light dark
  color rgba(255, 255, 255, 0.87)
  background-color #242424
  font-synthesis none
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-text-size-adjust 100%

body
  margin 0
  display flex
  place-items center
  min-width 320px
  min-height 100vh

.page-wrapper
  width 100%
  height 100vh
  overflow clip

.app-wrapper
  position relative
  width 100%
  height 100%

#app
  position relative
  width 100%
  height 100%
  clip-path inset(0 0 15% 15%)
  z-index 10

.bw-dim
  position absolute
  inset 0
  mix-blend-mode color
  background black
  z-index 20
  opacity 1
  pointer-events none

.grad-dim
  position absolute
  inset 0
  background linear-gradient(180deg, #1B1B1B 0%, rgba(27, 27, 27, 0) 47.07%, #1B1B1B 100%)
  z-index 20
  pointer-events none
  will-change transform

.btn
  background rgba(0, 0, 0, 0.5)
  border none
  // height 100%
  // width 3rem
  height 4.5rem
  cursor pointer
  border-radius 99rem
  display grid
  place-items center
  aspect-ratio 1
  opacity 1
  transition all 300ms
  font-size 1rem
  user-select none

.btn:hover
  color grey
  background rgba(0, 0, 0, 1)

  .svg
    opacity 0.5

.svg
  transition all 300ms

.btn--vr
  padding 0 2rem
  aspect-ratio inherit

.btn--xr
  position fixed
  top 50%
  left 50%
  transform translate(-50%, -50%)
  padding 2rem 4rem
  border-radius 99rem
  display grid
  place-items center
  font-size 1.5rem
  background #000
  border none
  z-index 1000

.btn--vr:hover, .svg
  color white

.ui-wrap, .init-ui
  position absolute
  inset 0
  will-change transform

.init-ui
  z-index 30
  pointer-events none
  // opacity 0

.ui-wrap
  z-index 40
  opacity 0
  pointer-events none

.ui__img
  width 100%
  position absolute

.ui__img--top
  top 0

.ui__img--bottom
  bottom 0

.ui__btns
  position absolute
  top 2rem
  right 4rem
  display flex
  height 4.5rem
  gap 1rem
  z-index 50
  pointer-events auto

$pad = 2rem

.top-ui, .bottom-ui
  position absolute
  // left 50%
  // width 100vw - $pad * 2
  left $pad
  right $pad
  display flex
  height 4.5rem
  z-index 50
  pointer-events auto
  justify-content space-between

.top-ui
  top $pad

.bottom-ui
  bottom $pad

.ui__nav
  display flex
  gap 1rem

.title
  position absolute
  height 3rem
  left 50%
  translate -50%

.logo
  height 4rem